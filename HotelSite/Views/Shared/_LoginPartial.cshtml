@if (User.Identity.IsAuthenticated)
{
    <form asp-controller="Account" asp-action="LogOff" class = "navbar-right" id = "logoutForm">
        @Html.AntiForgeryToken()
        <ul class="nav navbar-nav ">
            <li class="nav-item dropdown">
                <a class="nav-link dropdown-toggle" href="#" id="navbarDropdownMenuLink3" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                    @User.Identity.Name
                </a>
                <div class="dropdown-menu" aria-labelledby="navbarDropdownMenuLink3">
                    <a class="dropdown-item">Профиль</a>
                    <a class="dropdown-item">История обращений</a>
                    <div class="dropdown-divider"></div>
                    @if (User.IsInRole("admin"))
                    {
                        <a class="dropdown-item" asp-controller="Users" asp-action="Index">
                            Функционал администратора
                        </a>
                    }
                    @if (User.IsInRole("moderator"))
                    {
                        <a class="dropdown-item" asp-controller="Users" asp-action="Index">
                            Функционал модератора
                        </a>
                    }
                    @if (User.IsInRole("manager"))
                    {
                        <a class="dropdown-item" asp-controller="Users" asp-action="Index">
                            Функционал менеджера
                        </a>
                    }
                </div>
            </li>
            <li><a href="javascript:document.getElementById('logoutForm').submit()"><span class="nav-link">Выход</span></a></li>
        </ul>
    </form>
}
else
{
    <ul class="navbar-nav mr-auto">
        <li>
            <a class="nav-link" asp-controller="Account" asp-action="Register">Регистрация</a>
        </li>
        <li>
            <a class="nav-link" asp-controller="Account" asp-action="Login">Вход</a>
        </li>
    </ul>
}