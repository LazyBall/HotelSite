@model HotelSite.Models.HomeViewModels.CreateReservationViewModel

@{
    ViewData["Title"] = "BookARoom";
}

<h1>Бронирование</h1>

<h4>Заполните поля ниже</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="BookARoom">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Arrival" class="control-label"></label>
                <input type="date" asp-for="Arrival" class="form-control"
                       min="@DateTime.Now.ToString("yyyy-MM-dd")"
                       max="@DateTime.Now.AddYears(1).ToString("yyyy-MM-dd")" />
                <span asp-validation-for="Arrival" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="PlannedNumberOfDays" class="control-label"></label>
                <input asp-for="PlannedNumberOfDays" class="form-control" />
                <span asp-validation-for="PlannedNumberOfDays" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="hidden" asp-for="RoomNumber" class="form-control" />
            </div>
            <div class="form-group">
                <input type="submit" value="Забронировать" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Назад к списку номеров</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
