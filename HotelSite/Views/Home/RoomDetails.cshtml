@model HotelSite.Models.HomeViewModels.RoomDetailsViewModel

@{
    ViewData["Title"] = "RoomDetails";
}

<h1>Гостиничный номер</h1>

<div>
    <h4>О номере @Model.Number</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Number)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Number)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Floor)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Floor)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Capacity)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Capacity)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Price)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Price)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Comfort)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Comfort)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Description)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Description)
        </dd>
    </dl>
</div>
<div>
    <br />
    @Html.ActionLink("Забронировать", "BookARoom", new { roomNumber = Model.Number })
    <br />
    <a asp-action="Index">Назад</a>
</div>

<hr />
@if (Model.Photos.Any())
{
<h4>Фото номера</h4>
    <div class="container">
        <div class="row  justify-content-center">
            <div class="col-10 ">
                <div id="carouselControls" class="carousel slide" data-ride="carousel">
                    <div class="carousel-inner">
                        <div class="carousel-item active">
                            <img class="d-block w-100"
                                 src="data:image/jpeg;base64,@(Convert.ToBase64String(Model.Photos[0].ByteArray))">
                        </div>

                        @for (int i = 1; i < Model.Photos.Count; i++)
                        {
                            <div class="carousel-item">
                                <img class="d-block w-100"
                                     src="data:image/png;base64,@(Convert.ToBase64String(Model.Photos[i].ByteArray))" />
                            </div>
                        }

                    </div>
                    <a class="carousel-control-prev" href="#carouselControls" role="button"
                       data-slide="prev">
                        <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                        <span class="sr-only">Previous</span>
                    </a>
                    <a class="carousel-control-next" href="#carouselControls" role="button"
                       data-slide="next">
                        <span class="carousel-control-next-icon" aria-hidden="true"></span>
                        <span class="sr-only">Next</span>
                    </a>
                </div>
            </div>
        </div>
    </div>
}
<br />