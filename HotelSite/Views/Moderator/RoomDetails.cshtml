@model HotelSite.Models.Room

@{
    ViewData["Title"] = "RoomDetails";
}

<h1>Гостиничный номер</h1>

<div>
    <h4>О номере</h4>
    <hr />
    @if (Model.Photos.Any())
    {
        <div id="carousel" class="carousel slide" data-ride="carousel">
            <ol class="carousel-indicators">
                <li data-target="#carousel" data-slide-to="0" class="active"></li>
                @for (int i = 1; i < Model.Photos.Count; i++)
                {
                    <li data-target="#carousel" data-slide-to="@i"></li>
                }
            </ol>
            <div class="carousel-inner">
                <div class="carousel-item active">
                    <img class="img-fluid"
                         src="data:image/jpeg;base64,@(Convert.ToBase64String(Model.Photos[0].ByteArray))" />
                </div>
                @for (int i = 1; i < Model.Photos.Count; i++)
                {
                    <div class="carousel-item">
                        <img class="img-fluid" @*style="max-width: 200px; height: auto;"*@
                             src="data:image/png;base64,@(Convert.ToBase64String(Model.Photos[i].ByteArray))" />
                    </div>
                }
            </div>
            <!-- Элементы управления -->
            <a class="carousel-control-prev" href="#carousel" role="button" data-slide="prev">
                <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                <span class="sr-only">Предыдущий</span>
            </a>
            <a class="carousel-control-next" href="#carousel" role="button" data-slide="next">
                <span class="carousel-control-next-icon" aria-hidden="true"></span>
                <span class="sr-only">Следующий</span>
            </a>
        </div>
    }
    <br />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Number)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Number)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Floor)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Floor)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Capacity)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Capacity)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Price)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Price)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.IsReady)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.IsReady)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.IsBusy)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.IsBusy)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Comfort)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Comfort)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Description)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Description)
        </dd>
    </dl>
</div>
<div>
    <br />
    @Html.ActionLink("Изменить", "EditRoom", new { roomNumber=Model.Number}) |
    <a asp-action="Rooms">Назад к списку номеров</a>
</div>
