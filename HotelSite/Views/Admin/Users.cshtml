@model IEnumerable<HotelSite.Models.AdminViewModels.UserViewModel>

@{
    ViewData["Title"] = "Users";
}

<h1>Список пользователей</h1>
<br />
<p>
    <a asp-action="CreateUser" type="button" class="btn btn-info">
        Добавить нового пользователя
    </a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Email)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.FirstName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.LastName)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var user in Model)
{
        <tr>
            <td>
                @Html.DisplayFor(modeluser => user.Email)
            </td>
            <td>
                @Html.DisplayFor(modeluser => user.FirstName)
            </td>
            <td>
                @Html.DisplayFor(modeluser => user.LastName)
            </td>
            <td>
                <a asp-action="EditUser" asp-route-id="@user.Id" class="btn btn-primary">
                    Изменить
                </a>
                <a asp-action="DeleteUser" asp-route-id="@user.Id" class="btn btn-danger">
                    Удалить
                </a>    
            </td>
        </tr>
}
    </tbody>
</table>

<div>
    <br />
    <a asp-action="Index" class="btn btn-primary" role="button">Назад в главное меню</a>
</div>
